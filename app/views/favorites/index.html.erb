<h2 class="text-center">您已点赞<%= @products.count %>个商品</h2>
<br>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "img-thumbnails") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "img-thumbnail") %>
        <% end %>
      <% end %>
      <h4><%= product.title %></h4>
      <h4><%= product.title %> ￥ <%= product.price %></h4>
      <div>
        <% if !product.users.include?(current_user) %>
          <%= link_to("",favorite_product_path(product),method: :post, class: "fa fa-thumbs-o-up fa-2x") %><%= product.users.count %>
        <% else %>
          <%= link_to("",unfavorite_product_path(product),method: :post, class: "fa fa-thumbs-up fa-2x", style: "color:red") %><%= product.users.count%>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

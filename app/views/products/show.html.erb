<div class="container" style="margin-top: 50px;">
  <div class="row">

    <div class=" col-md-4">
      <% if @product.image.present? %>
        <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
      <% end %>
      <div class="col-xs-12 col-md-4">
        <div>作者:   <%= @product.writer %></div>
        <div>出版社: <%= @product.prees %></div>
        <div>副标题: <%= @product.subtitle %></div>
        <div>译者:   <%= @product.translator %></div>
        <div>出版年: <%= @product.year %></div>
        <!-- <div>版次:</div>
        <div>印次:</div>
        <div>印数:</div>
        <div>编与著:</div>
        <div>参考文献:</div>
        <div>索引:</div>
        <div>作者微博:</div>
        <div>译者微博:</div>
        <div>出版社微博:</div> -->
        <div>页数:  <%= @product.pages %></div>
        <!-- <div>ISBN: <%= @product.ISBN %></div> -->
        <div> 数量: <%= @product.quantity %></div>
        <div>定价:<%= @product.price %> ￥ </div>
        <div>类别:<%= @product.category %></div>
      </div>
      <div class="col-md-2">
        <%= link_to("-", "", id: "quantity-minus", class: "quantity-minus btn btn-default disabled") %>
        <input type="text" name="quantity" value="1" id="quantity-input" class="quantity-input" style="width: 16px;">
        <%= link_to("+", "", id: "quantity-plus",  class: "quantity-plus btn btn-default #{@product.quantity <= 1 ? 'disabled' : ''}") %>
      </div>

      <div class="col-md-2">
        <div class="pull-right">
          <% if @product.quantity.present? && @product.quantity > 0 %>
            <%= link_to("加入购物车", add_to_cart_product_path(@product), :method => :post, :class => "btn btn-primary btn-lg btn-danger") %>
          <% else %>
            已销售一空，无法购买
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <h2><%= @product.title %></h2>
        <h4>内容介绍...</h4>
        <hr>
        <p>
          <%= @product.description %>
        </p>
    </div>

    <div class="col-xs-12 ">
        <h4>作者介绍...</h4>
        <hr>
        <p>
          <%= @product.about_author %>
        </p>
    </div>
  </div>
</div>

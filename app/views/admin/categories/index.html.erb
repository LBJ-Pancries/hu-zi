<h3>分类列表</h3>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to '新增分类', new_admin_category_path, class: 'btn btn-primary btn-sm'%>
</div>

<table class="table table-bordered table-striped custab">
  <thead>
    <tr>
      <th>#</th>
      <th>名称</th>
      <th colspan="2">设置</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name%></td>
        <td>
        <%= link_to("Edit", edit_admin_category_path(category), :class => "btn btn-xs btn-info") %>
        <%= link_to("Delete", admin_category_path(category), :class => "btn btn-xs btn-success",
                    method: :delete, data: { confirm: "Are you sure?"} )%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

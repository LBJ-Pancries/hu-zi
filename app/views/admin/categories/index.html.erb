<div class="container" style="margin-top: 50px;">
  <div class="row">
    <div class="col-md-2">
      <div class="dropdown" style="margin-top: 10px;">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Admin选单
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li> <%= link_to("Products", admin_products_path) %> </li>
          <li> <%= link_to("Orders", admin_orders_path) %> </li>
          <li> <%= link_to("Categories", admin_categories_path) %> </li>
        </ul>
      </div>
    </div>
    <div class="col-md-10">
      <h2>商品分类</h2>

      <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to '新的分类', new_admin_category_path, class: 'btn btn-primary'%>
      </div>

      <table class="table table-bordered table-striped custab">
        <thead>
          <tr>
            <th>#</th>
            <th>名称</th>
            <th colspan="2">设置</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.name%></td>
              <td>
              <%= link_to("Edit", edit_admin_category_path(category), :class => "btn btn-xs btn-info") %>
              <%= link_to("Delete", admin_category_path(category), :class => "btn btn-xs btn-success",
                          method: :delete, data: { confirm: "Are you sure?"} )%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

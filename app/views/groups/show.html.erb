<div class="container" style="margin-top: 80px;">
  <div class="col-md-12">
    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>

        <%= link_to("收藏", quit_group_path(@group), method: :post, class: "btn btn-default  pull-right") %>
      <% else %>

        <%= link_to("取消收藏", join_group_path(@group), method: :post, class: "btn btn-default  pull-right") %>
      <% end %>
    </span>

    <div class="group">
      <% if current_user && current_user == @group.user %>
        <%= link_to("Edit Movie", edit_group_path(@group), class: "btn btn-primary pull-right")%>
      <% end %>
    </div>
    <h2><%= @group.title %></h2>
    <p><%= @group.description %></p>

      <%= link_to("Write a Review", new_group_post_path(@group), class: "btn btn-default pull-left")%>

    <table class="table">
      <thead>
        <tr>
          <th>Movie Name</th>
          <th>留言</th>
          <th>发表时间</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td> <%= post.group.title %> </td>
            <td> <%= post.content %> </td>
            <td> <%= post.updated_at %> </td>
            <td> <%= link_to('Edit', edit_group_post_path(post.group, post), class: "btn btn-default btn-xs") %></td>
            <td> <%= link_to('Delete', group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @posts %>
    </div>
  </div>
</div>

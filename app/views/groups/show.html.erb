<div class="col-md-12">
  <span class="pull-right">
    <% if current_user && current_user.is_member_of?(@group) %>
      <%= link_to("取消关注", quit_group_path(@group), method: :post, class: "btn btn-default  pull-right") %>
    <% else %>
      <%= link_to("关注", join_group_path(@group), method: :post, class: "btn btn-default  pull-right") %>
    <% end %>
  </span>

  <div class="group">
    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit Movie", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

    <%= link_to("Write a Review", new_group_post_path(@group), class: "btn btn-default pull-left")%>

  <table class="table">
    <thead>
      <tr>
        <th>Movie Name</th>
        <th>留言</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.group.title %> </td>
          <td> <%= post.content %> </td>
          <td> <%= post.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
